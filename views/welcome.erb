<h2>Sinatra Template Default Page</h2>

<div class="content">
  <p>

    <%= DB[:items].map(:name)  %>

  </p>
  <p>
    <%= REDIS.get('chunky') %>
    <%= REDIS.connected? %>
  </p>
</div>

<div class="sidebar">
  <h3>Environment</h3>
  <ul>
    <li><b>Ruby:</b> <%= RUBY_VERSION %></li>
    <li><b>Environment:</b> <%= ENV["RACK_ENV"] %></li>
    <li><b>Server:</b> <%= @env["SERVER_SOFTWARE"] %></li>
    <li><b>Port:</b> <%= @env["SERVER_PORT"] %></li>
  </ul>
  
</div>
